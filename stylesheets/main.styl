body
  color #b5e853
  padding: 0;
  background: #151515 url("https://pages-themes.github.io/hacker/assets/images/bkg.png") 0 0;
  font-size: 16px;
  line-height: 1.5;
  font-family: Monaco, "Bitstream Vera Sans Mono", "Lucida Console", Terminal, monospace;
  max-width: 800px;
  margin: 0 auto;
  text-align: center;

  h1
    margin-top 20px
    font-size 30px
    margin-bottom 30px

  #summary
    border 1px solid #b5e853
    padding: 10px;
    font-size: 12px;
    text-align: left;
    box-sizing border-box
    margin-bottom 20px

  #user
    text-align left
    form
      .user
        border 1px solid #b5e853
        padding: 10px;
        box-sizing border-box
        white-space: pre-line;
        word-wrap: break-word;
        margin-bottom 20px
        .logout-wrap
          text-align right
      .post
        border 1px solid #b5e853
        padding: 10px;
        box-sizing border-box
        input.text
          width 100%
          padding 5px
          background #151515
          color #b5e853
          border 1px solid #b5e853
          box-sizing border-box
          margin-bottom 15px
          &::-webkit-input-placeholder
            color #b5e853
            opacity .5
          &::-moz-placeholder
            color #b5e853
            opacity .5
          &::-ms-input-placeholder
            color #b5e853
            opacity .5
          &::-moz-placeholder
            color #b5e853
            opacity .5
      .ex
        font-size 10px


  #posts
    .post
      margin-top 40px

      iframe
        background white
        color black
        border 5px solid #b5e853 !important
        background white
        box-sizing border-box
      .upvotes
        display: flex;
        justify-content: space-evenly;


.warn
  color red
.reddit-upvote
  background-image: url("../images/reddit-icons.png");
  background-position: -105px -1618px;
  background-repeat: no-repeat;
  width: 15px;
  height 14px
  margin 2px 0 0 0
  display inline-block




